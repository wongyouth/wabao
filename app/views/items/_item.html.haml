%li.span3.home
  .thumbnail
    %a(href="#{item_path(item)}" target="_blank" data-cid="#{item.category_id}")
      %img(src="#{item.pic_url}" title="#{strip_tags(item.title)}")
    .desc
      = strip_tags(item.title).truncate(28, omission: '')
    .desc
      - if item.promotion_price
        %span.price.through.grey= "#{format_price item.price}"
        %span.price.red= "#{format_price item.promotion_price}"
      - else
        %span.price.red= "#{format_price item.price}"
    .op
      = link_to "Shopping", item_path(item), class: "btn btn-success", target: "_blank"
