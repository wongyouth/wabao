- for category in @categories
  = label_tag category['cid'], class: "checkbox" do
    = check_box_tag 'categories[]', category['cid']
    %span= link_to_if category['is_parent'], category['name'], new_categories_path(:category_id => category['cid'])
= link_to "Add", "#", id: "create_category", class: "btn btn-primary"

= form_tag categories_path, id: "category-form", style: "display: none;" do
  = text_field_tag "data"

